{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**", 
        ".next/**", 
        "storybook-static/**"
      ],
      "env": [
        "NODE_ENV", "VERCEL_URL", "PORT", "VERCEL", "ALLOW_ROBOTS", "CURRENT_DOMAIN"
      ]
    },
    "test": {
      "dependsOn": [
        "lint", "^build"
      ],
      "outputs": [
        "coverage/**"
      ]
    },
    "lint": {
      "dependsOn": [],
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
